<Window x:Class="NumbersToWords.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Currency number to Words" Height="350" Width="627">
  <Grid Background="CadetBlue">
    <TextBox Height="24" HorizontalAlignment="Left" Margin="112,40,0,0" Name="textBox1"  Width="185"  VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
    <Label Content="Value :" Height="28" HorizontalAlignment="Left" Margin="57,40,0,0" Name="label1" VerticalAlignment="Top" Foreground="GreenYellow" />
    <Button Content="Convert to Words" Height="24" HorizontalAlignment="Left" Margin="334,40,0,0" Name="button1" VerticalAlignment="Top" Width="141" Foreground="#FF1D0808" Click="button1_Click" />
    <Label Content="$" Height="28" HorizontalAlignment="Left" Margin="300,40,0,0" x:Name="label1_Copy" VerticalAlignment="Top" Foreground="GreenYellow"  />

    <Label Content="Words : " Height="28" HorizontalAlignment="Left" Margin="57,93,0,0" Name="label0" VerticalAlignment="Top" Foreground="GreenYellow" />
    <TextBlock  TextWrapping="WrapWithOverflow" Height="61" HorizontalAlignment="Left" Margin="112,96,0,0" Name="label2" VerticalAlignment="Top" Foreground="Yellow" FontSize="14" ></TextBlock>

  </Grid>
</Window>
